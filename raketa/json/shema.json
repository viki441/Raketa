        "type": "schema",
        "schema": {
            "zip": {
                "type": "text",
                "pattern": "[1-9]{1}[0-9]{3}"
            },
            "street": {
                "type": "textarea"
            }
        }
    },
    "secret 1": {
        "type": "text",
        "placeholder": "Please type your biggest secret."
    }
    ,
    "secret 2": {
        "type": "text",
        "placeholder": "Please type your biggest secret."
    }
